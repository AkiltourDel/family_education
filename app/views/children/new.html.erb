
<div class="home page-container page-container--center">
    <%= render 'shared/navbar' %>
    <h1>Ajouter un enfant</h1>
    <div class ="family-creation-form">
         <%= simple_form_for @child do |f| %>
        <%= f.input :name, label: 'Nom', placeholder: 'Son petit nom' %>
        <%= f.input :birth_date, input_html: { class: 'input' }, label: 'Date de naissance', as: :date,
                    start_year: Date.today.year - 17,
                    end_year: Date.today.year - 11,
                    order: [:day, :month, :year] %>
        <%= f.input :email, 
                    label: 'Email de votre Enfant',
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }%>
        <%= f.hidden_field :password, :value => '123widou' %>
        <%= f.hidden_field :password_confirmation, :value => '123widou' %>
        <%= f.hidden_field :family_id, :value => current_user.family_id %>
        <%= f.hidden_field :child, :value => true %>
        <%= f.hidden_field :point, :value => 0 %>

    </div>
        <%= f.button :submit, "Ajouter", class: 'btn button-subscribe' %>
    <% end %>
  
    <button type="button" class="btn"><%= link_to "Retour", :back,  class: 'btn button-subscribe' %></button>

    <%= render 'shared/footer' %>
</div>