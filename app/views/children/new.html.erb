
<div class="home page-container page-container--center">
    <%= render 'shared/navbar' %>
    <h1>Ajouter un enfant</h1>
    <div class ="family-creation-form">
         <%= simple_form_for @child do |f| %>
        <%= f.input :name, label: 'Nom', placeholder: 'Son petit nom' %>
        <%= f.input :birth_date, label: 'Date de naissance', as: :date,
                    start_year: Date.today.year - 25,
                    end_year: Date.today.year - 7 %>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }%>
        <%= f.input :password,
                    :label=> "Mot de passe",
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    :label=> "Confirmer le mot de passe",
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.hidden_field :family_id, :value => current_user.family_id %>
        <%= f.hidden_field :child, :value => true %>
        <%= f.hidden_field :point, :value => 0 %>

        <%= f.button :submit, "Ajouter", class: 'btn button-subscribe' %>
    <% end %>
    </div>
  

    <%= render 'shared/footer' %>
</div>