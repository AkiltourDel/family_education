<div class="home page-container page-container--center">
  <%= render 'shared/navbar' %> 

<% mission_name = [] %>
    <h1>Liste des missions</h1>
      <% @missions.each do |mission| %>
        <% mission_name << mission.name.strip %>
      <% end %>
      <% total_mission = mission_name.reduce(Hash.new(0)) { |a, b| a[b] += 1; a } %>
      <% total_mission.each do |key, value| %>
        <% if key != "" %>
          <ul>
            <li><%= "#{key} --> #{value}" %></li>
          </ul>
        <% end %>
      <% end %>

