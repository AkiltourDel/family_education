<div class="home page-container page-container--center">

  <%= render 'shared/navbar' %>

      <div class="partnair-description">
        <h1><%= @partnair.name %></h1>
        <p><%= @partnair.description.gsub(/\n/, '<br/>').html_safe %></p>
        <%= link_to "Cliquez sur ce lien pour plus d'information", @partnair.website %>
        <%= link_to "Ajouter comme récompense", new_family_reward_path(current_user.family.id), class: 'link' %>
        <b><%= "Un code promo s'affichera directement dans la récompense si votre enfant sélectionne celle-ci."%></b>
      </div>
      <button type="button" class="btn"><%= link_to "Retour", :back,  class: 'btn button-subscribe' %></button>

  <%= render 'shared/footer' %>
</div>
