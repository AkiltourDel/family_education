<h1>Voici la liste des récompenses</h1>

<button><%= link_to "Ajouter une récompenses",  new_family_reward_path(@current_user.id) %></button>

<ul class="list-rewards">
  <% @rewards.each do |reward| %>
    <%= link_to reward_path(reward) do %>
      <li>
        reward = <%= reward.name.capitalize %>
      </li>
        <p>Nombre de point requis <%= reward.price %></p>
    <% end %>
  <% end %>
</ul>



