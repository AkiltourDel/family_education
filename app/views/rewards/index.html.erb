<% if current_user.child? %>
<!-- VUE ENFANT -->
<h1>Mes récompenses</h1>
<h2>Mon nombre de points disponible <%= @current_user.point %></h2>
  <ul class="list-rewards">
    <h3>Les récompenses disponibles (met toi ienb)</h3>
    <% @current_user.rewards.order('price DESC').each do |reward| %>
      <% if reward.done? == false %>
        <%= link_to reward_path(reward) do %>
          <li>
            <%= reward.name.capitalize %>
          </li>
            <p>Nombre de point requis <%= reward.price %></p>
        <% end %>
      <% end %>
    <% end %>
  </ul>

  <ul class="list-rewards">
    <h3>Les récompenses déjà pécho</h3>
    <% @current_user.rewards.order('price DESC').each do |reward| %>
      <% if reward.done?  %>
        <%= link_to reward_path(reward) do %>
          <li>
            <%= reward.name.capitalize %>
          </li>
            <p>Nombre de point requis <%= reward.price %></p>
        <% end %>
      <% end %>
    <% end %>
  </ul>

<% else %>
<!-- VUE PARENT -->

  <h1>Voici la liste des récompenses</h1>

  <button><%= link_to "Ajouter une récompenses",  new_family_reward_path(@current_user.id) %></button>

  <ul class="list-rewards">
    <% @family_rewards.each do |reward| %>
      <%= link_to reward_path(reward) do %>
        <li>
          reward = <%= reward.name.capitalize %>
        </li>
          <p>Nombre de point requis <%= reward.price %></p>
      <% end %>
    <% end %>
  </ul>
<% end %>

