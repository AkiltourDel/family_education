<div class="home page-container page-container--center">

  <%= render 'shared/navbar' %> 
 
 
 

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="family-creation-form">

        <%# <h1>Mon compte <%= resource_name.to_s.humanize %></h1>

      <%# Je sais pas Ã  quoi sert le resource_name au dessus donc je mets juste Mon compte %> 

      <h1>Mon compte </h1>

        <%= f.input :email, required: true, autofocus: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :password,
                    label: 'Nouveau mot de passe',
                    
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    label: 'Confirmer le nouveau mot de passe',
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :current_password,
                    label: 'Ancien mot de passe',
                    hint: "Valider les changements avec votre ancien mot de passe",
                    required: true,
                    input_html: { autocomplete: "current-password" } %>
      

      <div class="form-actions">
        <%= f.button :submit, "Enregistrer",  class: 'btn button-subscribe' %>
      </div>
    <% end %>

    
   

     <%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
   <br />
    <%= link_to "Retour", :back %>

    </div>

  <%= render 'shared/footer' %>
</div>